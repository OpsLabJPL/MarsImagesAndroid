<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.powellware.marsimages"
    android:versionCode="7"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    
    <application
        android:name="gov.nasa.jpl.hi.marsimages.MarsImagesApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:allowBackup="true">
        <activity
            android:name="gov.nasa.jpl.hi.marsimages.MarsImagesActivity"
            android:label="Mars Images"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name="gov.nasa.jpl.hi.marsimages.activity.FullscreenImageActivity"
            android:label="@string/app_name"
            android:exported="false"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="gov.nasa.jpl.hi.marsimages.view.TOUCH_VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="gov.nasa.jpl.hi.marsimages.activity.AboutThisAppActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="gov.nasa.jpl.hi.marsimages.ABOUT_THIS_APP" />
            </intent-filter>
        </activity>
        <activity
            android:name="gov.nasa.jpl.hi.marsimages.activity.CoursePlotActivity"
            android:label="@string/app_name"
            android:exported="false"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="gov.nasa.jpl.hi.marsimages.view.PLOT_VIEW" />
            </intent-filter>
        </activity>
		<provider android:name="gov.nasa.jpl.hi.marsimages.SuggestionsProvider" 
		    android:authorities="gov.nasa.jpl.hi.marsimages.SuggestionsProvider"
		    android:exported="false">
		</provider>
	</application>
</manifest>