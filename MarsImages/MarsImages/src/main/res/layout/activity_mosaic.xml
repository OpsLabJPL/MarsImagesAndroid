<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/mosaicSurfaceViewContainer"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="gov.nasa.jpl.hi.marsimages.ui.MosaicActivity" tools:ignore="MergeRootFrame" >

    <fragment
        android:name="gov.nasa.jpl.hi.marsimages.ui.MarsRajawaliFragment"
        android:id="@+id/mosaicFragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout="@layout/mars_mosaic_fragment" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/captionTextView"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mosaicProgressBar"
        android:layout_gravity="center"
        android:indeterminate="true" />

</FrameLayout>
